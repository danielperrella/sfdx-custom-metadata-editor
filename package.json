{
	"name": "sfdx-custom-metadata-editor",
	"displayName": "SFDX Custom Metadata Editor",
	"description": "Edit your custom metadata as csv",
	"qna": "https://github.com/Dan-Per/sfdx-custom-metadata-editor/issues",
	"bugs": {
		"url": "https://github.com/Dan-Per/sfdx-custom-metadata-editor/issues"
	},
	"repository": {
		"url": "https://github.com/Dan-Per/sfdx-custom-metadata-editor/"
	},
	"icon": "images/VSCodeCore.png",
	"galleryBanner": {
		"color": "#ECECEC",
		"theme": "light"
	},
	"author": "Daniel Perrella",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:sfdx-project.json",
		"onCommand:sfdx-custom-metadata-editor.export",
		"onCommand:sfdx-custom-metadata-editor.import",
		"onCommand:sfdx-custom-metadata-editor.test"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"commandPalette": [
				{
					"command": "sfdx-custom-metadata-editor.export",
					"when": "sfdx:project_opened"
				},
				{
					"command": "sfdx-custom-metadata-editor.import",
					"when": "sfdx:project_opened"
				}
			]
		},
		"commands": [
			{
				"command": "sfdx-custom-metadata-editor.test",
				"category": "Category",
				"title": "Test"
			},
			{
				"command": "sfdx-custom-metadata-editor.export",
				"title": "Export Custom Metadata To CSV",
				"category": "SCME"
			},
			{
				"command": "sfdx-custom-metadata-editor.import",
				"title": "Import Custom Metadata From CSV",
				"category": "SCME"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@oclif/dev-cli": "^1",
		"@oclif/plugin-help": "^2",
		"@oclif/test": "^1",
		"@salesforce/dev-config": "1.4.1",
		"@types/cross-spawn": "^6.0.2",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"@salesforce/core": "^2.35.3",
		"@types/jsforce": "^1.9.41",
		"@types/objects-to-csv": "^1.3.1",
		"convert-csv-to-json": "^1.3.3",
		"csvtojson": "^2.0.10",
		"export-to-csv": "^0.2.1",
		"js2xmlparser": "^4.0.2",
		"jsforce": "^1.11.0",
		"rxjs": "^5.4.1",
		"tree-kill": "^1.1.0",
		"xml-decorators": "^1.0.8",
		"xml-serializer-ts": "^1.0.2"
	}
}
